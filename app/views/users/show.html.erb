<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<p>
  <strong><%= User.human_attribute_name(:name) %>:</strong>
  <%= @user.name %>
</p>

<p>
  <strong><%= User.human_attribute_name(:email) %>:</strong>
  <%= @user.email %>
</p>

<%= link_to t('common.edit'), edit_user_path(@user), id: "edit-user" %>
<%= link_to t('common.destroy'), user_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, id: "destroy-user" %>
